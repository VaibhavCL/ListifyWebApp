    <body>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        
            <h1>Sign Up</h1>
        
        
        <div class="container">

            <input type="text" class="form-control" name="Name" placeholder="Name" style="color:black">
            @Html.ValidationMessageFor(m => m.Name)
            <br>
            <input type="text" class="form-control" name="Email" placeholder="Email" style="color:black">
            @Html.ValidationMessageFor(m => m.Email)

            <br>

            <input type="password" class="form-control" name="Password" placeholder="Password" style="color:black">
            @Html.ValidationMessageFor(m => m.Password)
            <br>

            <input type="password" class="form-control" name="ConfirmPassword" placeholder="Confirm Password" style="color:black">
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
            <br>
            <br>
            <button class="btn" name="Register">Register</button>
            <br />
            <br />
           
        </div>
}
    </body>




